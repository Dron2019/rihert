
extends ../layout/main
block variable
  -
    var title_page = 'single-news'
    var id_page = 'id-page-single-news'
    var class_page = 'class-page-single-news'
    var breadcrumbsSubitem = [
      {
        label: 'About',
        link: pagesLink[0].about
      }
    ]
  
block meta
  title= title_page
  meta(name='description', content='')
block head
    link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
  script(defer src='./assets/scripts/vendors.bundle.js')
  script(defer src='./assets/scripts/index.bundle.js')
  script(defer src='./assets/scripts/libs.js')
  script(defer src='./assets/scripts/index.js')
  script(defer src='./assets/scripts/header.js')
  script(defer src='./assets/scripts/single-news.js')
block content
  .container.single-news-container
    .single-news-container__date 01.02.2022
    a(href="/news").single-news-container__backward
      <svg width="93" height="92" viewBox="0 0 93 92" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M92.4264 45.9999H7.57359M7.57359 45.9999L50 88.4263M7.57359 45.9999L50 3.57346" stroke="#93C7E8" stroke-width="10"/>
      </svg>
    .text-style-1920-h-3.single-news-container__title Динаміка розвитку компанії говорить сама за себе, буквально за три роки команда на 100% реалізувала три об’єкти.
    +img('news/card-1.jpg').single-news-container__img
    .single-news-container__text.text-style-1920-body
      p Саме такий BHAG ми собі поставили та до якого впевнено рухаємося з кожним новим проєктом. Про те, що вже зараз ми змінюємо обличчя Києва та створюємо проєкти майбутнього, говорить і редакція НВ. У новому номері вона разом з архітекторами, забудовниками та урбаністами склала рейтинг 10 знакових об’єктів столиці та включила до нього відразу два проєкти, які ми реалізуємо спільно з партнерами.
      ul
        li Lorem, ipsum dolor.
        li Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolores, suscipit.
        li Lorem ipsum dolor sit amet consectetur adipisicing elit. Beatae ullam cupiditate exercitationem!
        li Lorem ipsum dolor sit amet consectetur, adipisicing elit. Repellat perferendis maxime quas nisi recusandae quisquam voluptates consequatur modi aliquam eos!
  .container.other-news-container
    .text-style-1920-h-3.other-news-container__title Останні новини та акції
    - 
      var newsCards = [{  date: '01.02.2022',  imageSrc: './assets/images/screen9/2.jpg',  title: 'Динаміка розвитку компанії говорить сама за себе, буквально за три роки команда на 100% реалізувала три об’єкти.'},{  date: '01.02.2022',  imageSrc: './assets/images/screen9/2.jpg',  title: 'Динаміка розвитку компанії говорить сама за себе, буквально за три роки команда на 100% реалізувала три об’єкти.'},{  date: '01.02.2022',  imageSrc: './assets/images/screen9/2.jpg',  title: 'Динаміка розвитку компанії говорить сама за себе, буквально за три роки команда на 100% реалізувала три об’єкти.'}]
    each card in newsCards
      a(href="/news").news-card
        .news-card__date #{card.date}
        .news-card__img
          img(src=card.imageSrc, alt='news')
        .news-card__text
          .news-card__title #{card.title}
          svg(width="69" height="69" viewBox="0 0 69 69" fill="none" xmlns="http://www.w3.org/2000/svg")
            path(d="M4 65L64 5M64 5H4M64 5V65" stroke="#93C7E8" stroke-width="10")
block footer
  include ../includes/inner-footer.pug
  include ../includes/footer-developer-block.pug

block header
  include ../includes/header.pug
