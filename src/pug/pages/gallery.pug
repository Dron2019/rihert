
extends ../layout/main
block variable
  -
    var title_page = 'gallery'
    var id_page = 'id-page-gallery'
    var class_page = 'class-page-gallery'
    var breadcrumbsSubitem = [
      {
        label: 'About',
        link: pagesLink[0].about
      }
    ]
  
block meta
  title= title_page
  meta(name='description', content='')
block head
    link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
  script(defer src='./assets/scripts/vendors.bundle.js')
  script(defer src='./assets/scripts/gallery.bundle.js')
block content
  <div class="gallery-popup" data-gallery-popup>
    <div class="gallery-popup__content">
        <div class="gallery-popup__buttons">
            <button class="gallery-popup__button gallery-popup__button-left unselectable" data-type="prev">
              <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect width="40" height="40" rx="20" fill="#212721"/>
                <path d="M14 20L20.8571 13M14 20L20.8571 27M14 20H26" stroke="#E3E3E3" stroke-width="2"/>
              </svg>

            </button>
            <button class="gallery-popup__button gallery-popup__button-right unselectable" data-type="next">
              <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect width="40" height="40" rx="20" transform="matrix(-1 0 0 1 40 0)" fill="#212721"/>
                <path d="M26 20L19.1429 13M26 20L19.1429 27M26 20H14" stroke="#E3E3E3" stroke-width="2"/>
              </svg>
            </button>
        </div>
        <div class="swiper-container">
            <div class="swiper-wrapper">
                        - var i = 0
                          while i < 4
                            +img('gallery/Vector'+i+'.png').swiper-slide
                            - i++
            </div>
        </div>

    </div>
    <svg class="gallery-popup__close" width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
      <rect width="40" height="40" rx="20" fill="#212721"/>
      <path d="M24 24L16 16M16 24L24 16L16 24Z" stroke="#ECEAE1" stroke-width="2"/>
    </svg>
  </div>
  +pageTitle('Галерея')
  .container.gallery-container
    .swiper-container
      .swiper-wrapper
        - var i = 0
        while i < 4
          +img('gallery/Vector'+i+'.png').swiper-slide
          - i++
    .gallery-container__nav
      svg(width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg")
        rect(width="40" height="40" rx="20" fill="#212721")
        path(d="M14 20L20.8571 13M14 20L20.8571 27M14 20H26" stroke="#E3E3E3" stroke-width="2")
      svg(width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg")
        rect(width="40" height="40" rx="20" fill="#212721")
        path(d="M14 20L20.8571 13M14 20L20.8571 27M14 20H26" stroke="#E3E3E3" stroke-width="2")
    
block footer
  include ../includes/inner-footer.pug
  include ../includes/footer-developer-block.pug


block header
  include ../includes/header.pug
