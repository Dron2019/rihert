include ../includes/mixins.pug
-
  var pagesLink = [
  {
  home: '/',
  characteristics: './characteristics.html',
  contacts: './contacts.html',
  terrace: './terrace.html'
  }
  ];
block variable
doctype html
html(lang="uk")
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
    //- Edge и ряд мобильных браузеров слишком умны. Отключим это.
    meta(name='format-detection', content='telephone=no')
    meta(name='format-detection', content='date=no')
    meta(name='format-detection', content='address=no')
    meta(name='format-detection', content='email=no')
    meta(content='notranslate', name='google')
    link(rel='icon', type='image/png', sizes='16x16', href='../static/favicon.ico')
    block meta
    block head

  body(class= class_page id= id_page)
    // START SVG SPRITE
    include ../../assets/svg-sprite/sprite/symbol_sprite.php
    // END SVG SPRITE
    // START LOADER
    include ../includes/loader.html
    // END LOADER
    // START POPUP MODAL
    include ../includes/popup.pug
    // END POPUP MODAL
    // START MENU
    include ../includes/menu.pug
    // END MENU
    .toast-wrapper(data-toast-wrapper)
    // START HEADER
    block header
    // END HEADER
    //- .page__inner
    //-   .page__content
    .curtain
    .horizontal-mob-curtain Переверніть прийстрій для коректного відображення
    .scroller-container
      block content

      //.page__footer-wrapper
        // START FOOTER
      block footer
        // END FOOTER
    block scripts
